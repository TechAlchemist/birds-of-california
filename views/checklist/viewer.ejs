<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/cdns.ejs') %>
    <title>Viewer</title>
</head>

<body>
    <h1> Checklist Viewer </h1>
    <% checklists.forEach(list => { %>



        <div class="row">
            <div class="col s12 m6">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"><%=list.listTitle%></span>
                  <p> Created: <%= list.createdAt.toLocaleString()%> </p>
                  <p> Last Updated: <%= list.updatedAt.toLocaleString()%> </p>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col s6">
                            <form action="/checklist/<%= list._id %>?_method=DELETE"  method="POST">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Delete
                                    <i class="material-icons right">delete</i>
                                  </button>
                            </form>
                        </div>
                        <div class="col s6">
                            <a class="waves-effect waves-light btn" href="/checklist/<%= list._id %>"><i class="material-icons right">pageview</i>View Checklist</a>
                        </div>

     
                    </div>


         
                </div>
              </div>
            </div>
          </div>
          <% }) %>










</body>

</html>