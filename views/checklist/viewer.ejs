<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../partials/cdns.ejs') %>

  <link rel="stylesheet" href="/css/style.css">
  <title>My Checklists</title>
</head>

<body>
  <%- include('../partials/nav.ejs') %>
  <div class="container">
    <% checklists.forEach(list => { %>
    
    <div class="container" id="card-deck">
      <div class="card" >
        <div class="card-content">
          <span class="card-title"><%=list.listTitle%></span>
          <p> Created: <%= list.createdAt.toLocaleString()%> </p>
          <p> Last Updated: <%= list.updatedAt.toLocaleString()%> </p>
        </div>
        <div class="card-action">
          <div class="row">
            <div class="col s6">
              <form action="/checklist/<%= list._id %>?_method=DELETE" method="POST">
                <button class="btn waves-effect waves-light" type="submit" name="action">Delete
                  <i class="material-icons right">delete</i>
                </button>
              </form>
            </div>
            <div class="col s6">
              <a class="waves-effect waves-light btn" href="/checklist/<%= list._id %>"><i
                  class="material-icons right">pageview</i>View Checklist</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
  <%- include('../partials/footer.ejs') %>
</body>

</html>