<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/cdns.ejs') %>
    <script src="/js/show-checklist.js" defer></script>
    <title>Show <%= list.listTitle%> </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <div class="container">

        <h3><%= list.listTitle %> </h3>

        <table id="checkListShow" class="display">
            <thead>
                <tr>
                    <th>Bird Id</th>
                    <th>Common Name</th>
                    <th>Latin Name</th>
                    <th>Family</th>
                    <th>Order</th>
                </tr>
            </thead>
            <% records.forEach(bird => { %>
            <tr>
                <td> <%= bird._id %> </td>
                <td> <%= bird.commonName %> </td>
                <td> <%= bird.latinName %> </td>
                <td> <%= bird.family %> </td>
                <td> <%= bird.order %> </td>
            </tr>
            <% }) %>
        </table>
        <button class="btn waves-effect waves-light" value="<%= list._id %>" type="submit" name="action"
            id="deleteBirdSubmit">Delete Selected
            Bird
            <i class="material-icons right">delete</i>
        </button>

        <button class="btn waves-effect waves-light" value="<%= list._id %>" type="submit" name="action" id="submitAddBirdBtn"> Submit Added Birds
            <i class="material-icons right">add</i>
        </button>

        <div class="input-field col s6">
            <input id="icon_prefix" type="text" class="validate">
            <label for="icon_prefix">Change the name of your list!</label>
        </div>
        <br>
       


</div>
<div class="container" id="addableBirdsTable">
    <table id="speciesTable" class="display">
        <thead>
            <tr>
                <th>Bird Id</th>
                <th>Common Name</th>
                <th>Latin Name</th>
                <th>Family</th>
                <th>Order</th>
            </tr>
        </thead>
        <% birds.forEach(bird => { %>
        <tr>
            <td> <%= bird._id %> </td>
            <td> <%= bird.commonName %> </td>
            <td> <%= bird.latinName %> </td>
            <td> <%= bird.family %> </td>
            <td> <%= bird.order %> </td>
        </tr>
        <% }) %>
    </table>

    <button class="btn waves-effect waves-light" type="submit" name="action" id="checklistSubmit">Submit Birds
        <i class="material-icons right">add</i>
    </button>
</div>
    <%- include('../partials/footer.ejs') %>
</body>

</html>